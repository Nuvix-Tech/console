{
  // "extends": "@nuvix/typescript-config/base.json",
  "include": ["**/*", "**/.server/**/*", "**/.client/**/*", ".react-router/types/**/*"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*", "./components/*"],
      "@nuvix/sui/*": ["../../packages/sui/src/*"],
      "@nuvix/sui": ["../../packages/sui/src"],
      "@nuvix/ui/*": ["../../packages/ui/src/*"],
      "@nuvix/ui": ["../../packages/ui/src"],
      "@nuvix/cui/*": ["../../packages/cui/src/components/*"]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  }
}
